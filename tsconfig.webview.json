{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "outDir": "out/webview",
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/webview/types.d.ts"
    ]
  },
  "include": ["src/webview/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
